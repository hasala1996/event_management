{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Run Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/manage.py",
      "args": [
        "runserver"
      ],
      "django": true,
      "justMyCode": true,
    },
    {
      "name": "Pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-s",
        "src/"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "DJANGO_SETTINGS_MODULE": "src.settings.base" // Cambia a la configuraci√≥n que uses
      }
    }
  ]
}